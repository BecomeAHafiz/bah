<h1>Listing surahs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Nombre de versets</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

<% @surahs.each do |surah| %>
  <tr>
    <td><%= surah.name %></td>
    <td><%= surah.position %></td>
    <td><%= surah.nbAyahs %></td>
    <td><%= surah.description %></td>
    <td><%= link_to 'Show', surah %></td>
    <td><%= link_to 'Edit', edit_surah_path(surah) %></td>
    <td><%= link_to 'Destroy', surah, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

